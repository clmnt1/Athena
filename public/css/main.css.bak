#name-list .name{
	cursor: pointer;
}

#popup-bar{
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 270px;
	overflow: hidden;
}
.popup{
	width: 200px;
	height: 270px;
	float: right;
	position: relative;
	display: inline-block;
	vertical-align: bottom;
	margin: 0 10px;
	padding: 10px;
	background-color:white;
	border-radius: 10px 10px 10px 10px;
	box-shadow: -1px 2px 10px 3px rgba(0, 0, 0, 0.3) inset;	
	
}

.close-btn{
	position: absolute;
	width: 15px;
	top: 15px;
	right: 30px;
	text-align: center;
	cursor: pointer;
}

.message{
	width: 150px;
}















